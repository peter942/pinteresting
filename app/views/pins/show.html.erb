


<div class="row">

  <div class="col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading center">

        <%= image_tag @pin.image.url(:medium) %>

      </div>
      <div class="panel-body">

 <center> <p><%= @pin.description %> <b>by</b> <%= @pin.user.username %></p> </center>

 <button type="button" class="btn btn-sm btn-default">
        <span class="glyphicon glyphicon-arrow-left"></span> <%= link_to 'Back', pins_path %>
      </button>
<br>
   
  <% if @pin.user == current_user %>

<br>
              
      <button type="button" class="btn btn-sm btn-default">
        <span class="glyphicon glyphicon-trash"></span>  <%= link_to 'Delete', @pin, method: :delete, data: { confirm: 'Are you sure?' } %>
      </button>

      <button type="button" class="btn btn-sm btn-default">
        <span class="glyphicon glyphicon-edit"></span>  <%= link_to 'Edit', edit_pin_path(@pin) %>
      </button>
   <% end %>
      </div>
    </div>
  </div>
</div>




     